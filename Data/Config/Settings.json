{
  "DomainSettings": {
    "DomainName": "adnauseumgaming.com",
    "NetBIOSName": "ADNAUSEUMGAMING",
    "DefaultOU": "OU=Users",
    "ForestName": "adnauseumgaming.com",
    "FunctionalLevel": "Windows Server 2016",
    "Departments": [
      "HR",
      "Security",
      "Accounting",
      "Marketing",
      "Sales",
      "IT",
      "Engineering",
      "Operations"
    ],
    "Locations": [
      "Headquarters",
      "Branch Office 1",
      "Branch Office 2",
      "Remote"
    ]
  },
  "PasswordPolicy": {
    "MinimumLength": 8,
    "MaximumLength": 128,
    "RequireComplexity": true,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireNumbers": true,
    "RequireSpecialCharacters": true,
    "PasswordHistoryCount": 5,
    "MinimumPasswordAge": 1,
    "MaximumPasswordAge": 90,
    "LockoutThreshold": 5,
    "LockoutDuration": 30,
    "ResetLockoutCounter": 15,
    "AccountLockoutDuration": 30
  },
  "Validation": {
    "EmailDomain": "adnauseumgaming.com",
    "EmpIDFormat": "XX####",
    "EmpIDPattern": "^[A-Z]{2}[0-9]{4}$",
    "SamAccountNamePattern": "^[a-zA-Z0-9._-]{1,20}$",
    "DisplayNamePattern": "^[a-zA-Z0-9\\s._-]{1,64}$",
    "AllowedSpecialCharacters": "!@#$%^&*()_+-=[]{}|;:,.<>?"
  },
  "UserDefaults": {
    "DefaultDepartment": "IT",
    "DefaultLocation": "Headquarters",
    "DefaultTitle": "Employee",
    "AutoGenerateSamAccountName": true,
    "AutoGenerateDisplayName": true,
    "RequireEmailAddress": true,
    "RequireEmpID": true
  },
  "Security": {
    "EnableAuditLogging": true,
    "AuditLogRetentionDays": 365,
    "EnablePasswordHistory": true,
    "EnableAccountLockout": true,
    "EnablePasswordExpiration": true,
    "HashAlgorithm": "SHA256",
    "EncryptSensitiveData": true
  },
  "Display": {
    "DefaultProperties": [
      "FirstName",
      "LastName",
      "DisplayName",
      "SamAccountName",
      "Department",
      "Enabled"
    ],
    "ExtendedProperties": [
      "EmailAddress",
      "EmpID",
      "Title",
      "Created",
      "Modified",
      "LastLogon"
    ],
    "ColorScheme": {
      "Enabled": "Green",
      "Disabled": "Red",
      "Locked": "Yellow",
      "Expired": "Orange"
    },
    "ProgressBarStyle": "Simple"
  },
  "Database": {
    "Type": "CSV",
    "Path": "Database/Database.csv",
    "BackupEnabled": true,
    "BackupRetention": 7,
    "AutoBackup": true,
    "CompressionEnabled": true
  },
  "Logging": {
    "LogLevel": "Information",
    "LogPath": "Logs/",
    "LogRetentionDays": 30,
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "LogFormat": "JSON"
  },
  "Performance": {
    "CacheEnabled": true,
    "CacheTimeout": 300,
    "BatchSize": 100,
    "MaxConcurrentOperations": 5,
    "EnableLazyLoading": true
  }
}
